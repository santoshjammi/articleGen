# Copy this file to .env and fill in your actual values

# Gemini API Key for article generation
GEMINI_API_KEY=your_gemini_api_key_here

# FTP Configuration for hosting deployment
FTP_HOST=your_ftp_host
FTP_USER=your_ftp_username
FTP_PASS=your_ftp_password
FTP_PORT=21
FTP_REMOTE_DIR=public_html

# SSL/TLS Configuration for FTP
FTP_SSL_ENABLED=yes
FTP_SSL_VERIFY_CERT=no
FTP_SSL_FORCE=no

# Optional: Email notification settings (uncomment and configure if needed)
# NOTIFICATION_EMAIL=your-email@example.com
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-smtp-user@gmail.com
# SMTP_PASS=your-smtp-password
